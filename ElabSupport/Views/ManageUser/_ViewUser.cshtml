@model ElabSupport.Models.UserViewModel
<head>
    <link href="~/CSS/AddUser.css" rel="stylesheet" />
</head>
<style>
    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tbody tr:hover {
            background-color: #e9e9e9;
        }

        .table .btn {
            text-decoration: none;
            margin-right: 5px;
        }

  
    /* Your existing table styles */
    .action-links {
        white-space: nowrap;
    }

    .action-links a {
        display: inline-block;
        margin-right: 5px;
    }
</style>
<table class="table">
    <thead>
        <tr>
            <th>UserId</th>
            <th>UserName</th>
            <th>FirstName</th>
            <th>Email</th>
            <th>Mobile Number</th>
            <th>Address</th>
            <th>DeviceId</th>
            <th>UserRole</th>
            <th>RateType</th>
            <th>Rates</th>
            <th>Active</th>
            <th>Action</th>
            <!-- Add other user data columns as needed -->
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.UserList != null)
        {
            foreach (var user in Model.UserList)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.Username</td>
                    <td>@user.FirstName</td>
                    <td>@user.EmailId</td>
                    <td>@user.MobileNumber</td>
                    <td>@user.Address</td>
                    <td>@user.DeviceId</td>
                    <td>@user.UserRoleId</td>
                    <td>@user.RateType</td>
                    <td>@user.Rates</td>
                    <td>@user.Active</td>
                    <td>
                        <div class="action-links">
                            @Html.ActionLink("Edit", "EditUser", new { id = user.UserId }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Delete", "DeleteUser", new { id = user.UserId }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are you sure you want to delete this user?');" })
                        </div>
                    </td>
                    <!-- Add other user data columns as needed -->
                </tr>
            }
        }
    </tbody>
</table>
